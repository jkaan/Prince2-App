{% extends 'base.html.twig' %}

{% block body %}
    <h1>Upload een document hier</h1>
    <form action="{{ path('uploadDocument') }}" method="POST" role="form" enctype="multipart/form-data">
        <div class="form-group">
            <label for="documentName">Naam document</label>
            <input class="form-control" id="documentName" name="documentName" type="text"/>
        </div>

        {# Categorieen #}
        <div class="form-group">
            <label for="categorie">Kies een categorie</label>
            <input type="text" class="form-control" id="categorie" name="categorie"/>
        </div>

        {# Radio buttons #}
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar1" value="1"/>
                Leerjaar 1
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar2" value="2"/>
                Leerjaar 2
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar3" value="3"/>
                Leerjaar 3
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar4" value="4"/>
                Leerjaar 4
            </label>
        </div>

        <div class="form-group">
            <label for="document">Te uploaden document</label>
            <input class="form-control" id="document" name="document" type="file"/>
        </div>
        <button class="btn btn-default" type="submit">Save</button>
    </form>
{% endblock body %}