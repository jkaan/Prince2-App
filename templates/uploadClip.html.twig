{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/admin">Beheer</a></li>
        <li class="active">Clip uploaden</li>
    </ol>
    <h1>Upload een filmpje hier</h1>
    <form action="{{ path('uploadClip') }}" method="POST" role="form">
        <div class="form-group">
            <label for="clipName">Naam filmpje</label>
            <input class="form-control" id="clipName" name="clipName" type="text"/>
        </div>

        {# Categorieen #}
        <div class="form-group">
            <label for="categorie">Kies een categorie</label>
            <input type="text" class="form-control" id="categorie" name="categorie"/>
        </div>

        {# Radio buttons #}
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar1" value="1"/>
                Leerjaar 1
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar2" value="2"/>
                Leerjaar 2
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar3" value="3"/>
                Leerjaar 3
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" name="leerjaren" id="leerjaar4" value="4"/>
                Leerjaar 4
            </label>
        </div>

        <div class="form-group">
            <label for="clip">Te uploaden filmpje (URL)</label>
            <input class="form-control" id="clip" name="clip" type="text"/>
        </div>
        <button class="btn btn-default" type="submit">Save</button>
    </form>
{% endblock body %}