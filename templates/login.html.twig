{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        {{ error }}
    {% endif %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li class="active">Login</li>
    </ol>
    <form id="loginForm" action="{{ path('checkLogin') }}" method="POST" role="form">
        <div class="form-group">
            <label for="username">Username:</label>
            <input class="form-control" id="username" type="text" name="_username" value="{{ last_username }}"/>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input class="form-control" id="password" type="password" name="_password"/>
        </div>
        <button type="submit" class="btn btn-success">Login</button>
    </form>
{% endblock body %}